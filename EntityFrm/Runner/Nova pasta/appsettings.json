{
  "template": {
    "name": "run.bat",
    "folder": "",
    "dictionary": "CONFIG",
    "files": [ "run.bat.txt" ]
  },
  "folders": [
    {
      "name": "Core", 
      "settings": {
        "type": "classlib",
        "packages": [ "MediatR", "FluentValidation" ]
      },
      "templates": [
        {
          "dictionary": "PROJETO",
          "name": "Data",
          "files": [ "IUnitOfWork.txt", "IRepository.txt" ]
        },
        {
          "dictionary": "PROJETO",
          "name": "DomainObjects",
          "files": [ "DomainException.txt", "DomainNotification.txt", "Entity.txt", "IAggregateRoot.txt" ]
        },
        {
          "dictionary": "PROJETO",
          "name": "Messages",
          "files": [ "Command.txt", "Event.txt", "Message.txt" ]
        }
      ]
    },
    {
      "name": "Domain",
      "settings": {
        "type": "classlib",
        "reference": [ "CoreProjeto" ]
      },
      "templates": [
        {
          "name": "Models",
          "folder": "Models",
          "dictionary": "TABELA_CAMPOS",
          "files": [ "Model.txt" ]
        },
        {
          "name": "Enum",
          "folder": "Models",
          "dictionary": "ENUM",
          "files": [ "Enum.txt" ]
        },
        {
          "name": "Repository",
          "folder": "Repository",
          "dictionary": "TABELAS",
          "files": [ "IRepository.txt" ],
          "fileName": "I{NOME}Repository.txt"
        }
      ]
    },
    {
      "name": "Data",
      "settings": {
        "type": "classlib",
        "packages": [ "Microsoft.EntityFrameworkCore", "Microsoft.EntityFrameworkCore.Relational" ],
        "reference": [ "DomainProjeto" ]
      },

      "templates": [
        {
          "name": "Context",
          "folder": "",
          "dictionary": "TABELAS",
          "files": [ "Context.txt" ]
        },
        {
          "name": "Repository",
          "folder": "Repository",
          "dictionary": "TABELAS",
          "files": [ "Repository.txt" ]
        },
        {
          "name": "Mappings",
          "folder": "Mappings",
          "dictionary": "TABELA_CAMPOS",
          "files": [ "MAPPING.txt" ]
        }
      ]
    },
    {
      "name": "Application",
      "folder": "Core",
      "settings": {
        "type": "webapi"
      }
    }
  ]
}